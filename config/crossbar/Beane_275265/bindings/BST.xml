<crossbarbindings>
    <default>
        <!--These bindings are for left trigger only.-->
        <lefttrigger>
        </lefttrigger>
        
        <!--These bindings are for right trigger only.-->
        <righttrigger>
        </righttrigger>
        
        <!--These bindings are for LT>RT, but also used for LT+RT if allowpriority is disabled.-->
        <bothtriggerslt>
            <buttonright>
                <type>Command</type>
                <command>/zerk</command>
                <text>ZERK</text>
            </buttonright>
            <buttonleft>
                <type>Command</type>
                <command>/exec beane</command>
                <text>/exec beane</text>
            </buttonleft>
        </bothtriggerslt>
        
        <!--These bindings are for RT>LT, and will not be used if allowpriority is disabled.-->
        <bothtriggersrt>
        </bothtriggersrt>
        
        <!--These bindings are for left trigger double tap and will not be used if allowdoubletap is disabled.-->
        <lefttriggerdt>
        </lefttriggerdt>
        
        <!--These bindings are for right trigger double tap and will not be used if allowdoubletap is disabled.-->
        <righttriggerdt>
        </righttriggerdt>
        
    </default>
    <palette name="BST_1">
        <!--These bindings are for left trigger only.-->
        <lefttrigger>
        </lefttrigger>
        
        <!--These bindings are for right trigger only.-->
        <righttrigger>
        </righttrigger>
        
        <!--These bindings are for LT>RT, but also used for LT+RT if allowpriority is disabled.-->
        <bothtriggerslt>
        </bothtriggerslt>
        
        <!--These bindings are for RT>LT, and will not be used if allowpriority is disabled.-->
        <bothtriggersrt>
        </bothtriggersrt>
        
        <!--These bindings are for left trigger double tap and will not be used if allowdoubletap is disabled.-->
        <lefttriggerdt>
        </lefttriggerdt>
        
        <!--These bindings are for right trigger double tap and will not be used if allowdoubletap is disabled.-->
        <righttriggerdt>
        </righttriggerdt>
        
    </palette>
</crossbarbindings>