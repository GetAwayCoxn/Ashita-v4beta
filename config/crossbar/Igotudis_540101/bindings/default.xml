<crossbarbindings>
    <!--These bindings are for left trigger only.-->
    <lefttrigger>
        <dpadup>
            <type>Command</type>
            <command>/lw profile Igotudis</command>
            <text>/lw profile Igotudis</text>
        </dpadup>
        <dpaddown>
            <type>Command</type>
            <command>/addon load skillchains</command>
            <text>SKILLCHAINS</text>
        </dpaddown>
        <dpadleft>
            <type>Command</type>
            <command>/addon load timers</command>
            <text>TIMERS</text>
        </dpadleft>
    </lefttrigger>
    
    <!--These bindings are for right trigger only.-->
    <righttrigger>
        <dpadup>
            <type>Command</type>
            <command>/addon unload database</command>
            <text>/addon unload database</text>
        </dpadup>
        <dpaddown>
            <type>Command</type>
            <command>/addon load database</command>
            <text>database</text>
        </dpaddown>
        <buttonup>
            <type>Command</type>
            <command>/db</command>
            <text>/db</text>
        </buttonup>
        <buttondown>
            <type>Command</type>
            <command>/addon reload database</command>
            <text>/addon reload database</text>
        </buttondown>
    </righttrigger>
    
    <!--These bindings are for LT>RT, but also used for LT+RT if allowpriority is disabled.-->
    <bothtriggerslt>
        <dpadup>
            <type>Command</type>
            <command>/auto</command>
            <text>GC_AUTO</text>
        </dpadup>
        <dpadright>
            <type>Command</type>
            <command>/wskill</command>
            <text>WSKILL</text>
        </dpadright>
        <dpaddown>
            <type>Command</type>
            <command>/dt</command>
            <text>GC_DT</text>
        </dpaddown>
        <dpadleft>
            <type>Command</type>
            <command>/meleeset</command>
            <text>MELEE_SET</text>
        </dpadleft>
        <buttonup>
            <type>Command</type>
            <command>/burst</command>
            <text>BURST</text>
        </buttonup>
        <buttondown>
            <type>Command</type>
            <command>/elecycle</command>
            <text>ELECYCLE</text>
        </buttondown>
        <buttonleft>
            <type>Command</type>
            <command>/nukeset</command>
            <text>NUKESET</text>
        </buttonleft>
    </bothtriggerslt>
    
    <!--These bindings are for RT>LT, and will not be used if allowpriority is disabled.-->
    <bothtriggersrt>
    </bothtriggersrt>
    
    <!--These bindings are for left trigger double tap and will not be used if allowdoubletap is disabled.-->
    <lefttriggerdt>
    </lefttriggerdt>
    
    <!--These bindings are for right trigger double tap and will not be used if allowdoubletap is disabled.-->
    <righttriggerdt>
    </righttriggerdt>
    
</crossbarbindings>