	<commands>
		<command input="/status">
			<setvar name="Status" value="0" />
		</command>
		<command input="/cape">
			<if advanced="$u_Cape=false">
				<setvar name="Cape" value="true" />
				<command>/exec capeon.txt</command>
				<echo mode="4">CP CAPE ON</echo>
			</if>
			<else>
				<setvar name="Cape" value="false" />
				<command>/exec capeoff.txt</command>
				<echo mode="4">CP CAPE OFF</echo>
			</else>
		</command>
		<command input="/dt">
			<if advanced="$u_DT=Off">
				<setvar name="DT" value="On" />
			</if>
			<else>
				<setvar name="DT" value="Off" />
			</else>
			<setvar name="Status" value="0" />
		</command>
		<command input="/burst">
			<if advanced="$u_Burst=Off">
				<setvar name="Burst" value="On" />
			</if>
			<else>
				<setvar name="Burst" value="Off" />
			</else>
			<setvar name="Status" value="0" />
		</command>
		<command input="/fight">
			<if advanced="$u_Melee=Off">
				<setvar name="Melee" value="On" />
				<command>/ac disable main</command>
				<command>/ac disable sub</command>
				<command>/ac disable range</command>
				<equip set="TP" />
			</if>
			<else>
				<setvar name="Melee" value="Off" />
				<command>/ac enable</command>
			</else>
			<setvar name="Status" value="0" />
		</command>
		<command input="/auto">
			<if advanced="$u_Auto=Off">
				<setvar name="Auto" value="On" />
			</if>
			<else>
				<setvar name="Auto" value="Off" />
			</else>
			<setvar name="Status" value="0" />
		</command>
		<command input="/tp">
			<if advanced="$u_TP!=1000">
				<setvar name="TP" value="1000" />
				<echo mode="4">AUTO TP SET TO 1000</echo>
			</if>
			<elseif advanced="$u_TP=1000">
				<setvar name="TP" value="1750" />
				<echo mode="4">AUTO TP SET TO 1750</echo>
			</elseif>
		</command>
		<command input="/wskill">
			<if advanced="$u_WS=0">
				<setvar name="WS" value="1" />
				<setvar name="WSname" value="Savage Blade" />
				<echo mode="4">Auto $u_WSname Enabled!</echo>
			</if>
			<elseif advanced="$u_WS=1">
				<setvar name="WS" value="2" />
				<setvar name="WSname" value="Chant du Cygne" />
				<echo mode="4">Auto $u_WSname Enabled!</echo>
			</elseif>
			<elseif advanced="$u_WS=2">
				<setvar name="WS" value="0" />
				<setvar name="WSname" value="None" />
				<echo mode="4">Auto WS Disabled!</echo>
			</elseif>
		</command>
	</commands>

	<load>
		<setvar name="Status" value="0" />
		<setvar name="DT" value="Off" />
		<setvar name="Ring" value="None" />
		<setvar name="Melee" value="Off" />
		<setvar name="Burst" value="Off" />
		<setvar name="TPWeapons" value="Naegling|Sakpata's Sword|Tauret" />
		<setvar name="Auto" value="Off" />
		<setvar name="WS" value="0" />
		<setvar name="WSname" value="None" />
		<setvar name="TP" value="1000" />
		<setvar name="Cape" value="false" />
		<command>/macro book 1</command>
		<if p_subjob="SCH">
			<command delay="500">/macro set 9</command>
		</if>
		<else>
			<command delay="500">/macro set 10</command>
		</else>
	</load>

	<default>
		<if advanced="$u_Status=0">
			<setvar name="Status" value="1" />
			<echo mode="4">$p_mainjob/$p_subjob STATUS:  DT [$u_DT]   MELEE [$u_Melee]   BURST [$u_Burst]   AUTO [$u_Auto]   WS[$u_WSname]</echo>
		</if>
		<if mode="AND" eq_main="$u_TPWeapons" p_status="engaged">
			<if advanced="$u_Melee=Off">
				<command>/fight</command>
			</if>
		</if>
		<if advanced="$u_DT=On">
			<equip set="DT" />
		</if>
		<elseif p_status="engaged">
			<equip set="TP" />
		</elseif>
		<else>
			<equip set="Idle" />
		</else>
		<if e_area="Ru'Lude*|Nashmau|Tavnazian Safehold|Port*|Bastok*|Windurst*|*San d'Oria|*Jeuno|*Whitegate|*Adoulin|Selbina|Mhaura|Norg|Rabao|Mog*">
			<equip set="Town" />
			<setvar name="Auto" value="Off" />
			<if advanced="$u_Melee=On">
				<setvar name="Melee" value="Off" />
				<command>/ac enable</command>
			</if>
		</if>
		<if eq_rring="Trizek*|Capacity*|Endorsement*|Facility*|Dim. Ring*|Echad*|Warp*">
			<setvar name="Ring" value="%eq_rring" />
			<equip>
				<ring2>$u_Ring</ring2>
			</equip>
		</if>
		<if advanced="$u_Auto=On">
			<if p_status="engaged">
				<if advanced="$u_WS!=0">
					<if p_tp=">$u_TP">
						<command>/ws "$u_WSname"</command>
					</if>
				</if>
			</if>
			<if b_419="<1">
				<command>/ja "composure" me</command>
			</if>
		</if>
	</default>

	<precast>
		<equip set="Precast" />
		<if ad_name="Cure*|Curaga*">
			<equip set="CurePre" />
		</if>
		<elseif ad_skill="enhancingmagic">
			<equip set="EnhPre" />
			<if ad_name="Stoneskin">
				<equip set="SSPre" />
			</if>
		</elseif>
		<elseif ad_name="Utsu*">
			<equip set="UtsuPre" />
		</elseif>
	</precast>

	<midcast>
		<if ad_type="WhiteMagic">
			<if ad_name="Cure*|Curaga*">
				<equip set="Cure" />
				<if mode="OR" e_weatherelement="Light" e_dayelement="Light">
					<equip>
						<waist>Hachirin-no-Obi</waist>
					</equip>
				</if>
				<if t_type="self">
					<equip set="selfCure" />
				</if>
			</if>
			<elseif ad_skill="enhancingmagic">
				<if t_type="self">
					<equip set="selfEnhancing" />
					<if ad_name="Phalanx*">
						<equip set="Phalanx" />
					</if>
				</if>
				<else>
					<equip set="Enhancing" />
				</else>
				<if ad_name="Stoneskin">
					<equip set="SS" />
				</if>
				<if ad_name="En*|Temper*">
					<equip set="SKILL" />
				</if>
			</elseif>
			<elseif ad_skill="enfeeblingmagic">
				<equip set="Enfeebling" />
			</elseif>
			<if ad_name="Cursna*">
				<equip set="Cursna" />
			</if>
			<if ad_name="Refresh*">
				<if t_type="self">
					<equip set="selfRefresh" />
				</if>
				<else>
					<equip set="Refresh" />
				</else>
			</if>
		</if>
		<elseif ad_type="BlackMagic">
			<equip set="Enfeebling" />
			<if ad_skill="elementalmagic">
				<equip set="Nuke" />
				<if advanced="$ad_element=$e_dayelement">
					<equip>
						<waist>Hachirin-no-Obi</waist>
					</equip>
				</if>
				<elseif advanced="$ad_element=$e_weatherelement">
					<equip>
						<waist>Hachirin-no-Obi</waist>
					</equip>
				</elseif>
				<if advanced="$u_Burst=On">
					<equip set="Burst" />
				</if>
				<if ad_name="*helix">
					<equip set="Helix" />
				</if>
			</if>
			<elseif ad_skill="enfeeblingmagic">
				<if ad_name="Paralyze*|Slow*|Addle*">
					<equip set="MND" />
				</if>
				<elseif ad_name="Poison*">
					<equip set="INT" />
				</elseif>
				<elseif ad_name="Distract*|Frazzle III">
					<equip set="POT" />
				</elseif>
			</elseif>
			<if ad_name="Aspir*|Drain*">
				<equip set="Drain" />
			</if>
		</elseif>
	</midcast>

