		<command delay="500">/macro set 1</command>
	</load>

	<default>
		<if advanced="$u_Status=0">
			<setvar name="Status" value="1" />
			<echo mode="4">$p_mainjob/$p_subjob STATUS:  Mode [$u_Mode]   DT [$u_DT]   AUTO [$u_Auto]   PET TP [$pet_tp $]</echo>
		</if>
		<if advanced="$u_DT=On">
			<equip set="PetDT" />
		</if>
		<elseif pet_status="engaged">
			<if p_status="engaged">
				<equip set="Hybrid" />
			</if>
			<else>
				<equip set="PetTP-$u_Mode" />
			</else>
			<if pet_tp=">950">
				<equip set="WS-$u_Mode" />
			</if>
			<if b_166=">=1">
				<equip set="OD" />
			</if>
		</elseif>
		<elseif p_status="engaged">
			<equip set="TP" />
		</elseif>
		<elseif pet_status="idle">
			<if p_status="idle">
				<equip set="Idle" />
				<if p_ismoving="True">
					<equip set="Movement" />
				</if>
			</if>
			<else>
				<equip set="TP" />
			</else>
		</elseif>
		<else>
			<equip set="Idle" />
			<if p_ismoving="True">
				<equip set="Movement" />
			</if>
		</else>
		<if pet_active="true">
			<if advanced="$pet_hpp<62">
				<equip set="PetDT" />
			</if>
			<elseif advanced="$pet_hpp<82">
				<equip set="PetDTHaste" />
			</elseif>
		</if>
