	<commands>
		<command input="/status">
			<setvar name="Status" value="0" />
		</command>
		<command input="/mode">
			<if advanced="$u_Mode=Melee">
				<setvar name="Mode" value="Ranged" />
			</if>
			<elseif advanced="$u_Mode=Ranged">
				<setvar name="Mode" value="Tank" />
			</elseif>
			<elseif advanced="$u_Mode=Tank">
				<setvar name="Mode" value="Mage" />
			</elseif>
			<elseif>
				<setvar name="Mode" value="Melee" />
			</elseif>
			<setvar name="Status" value="0" />
		</command>
		<command input="/dt">
			<if advanced="$u_DT=Off">
				<setvar name="DT" value="On" />
			</if>
			<else>
				<setvar name="DT" value="Off" />
			</else>
			<setvar name="Status" value="0" />
		</command>
		<command input="/auto">
			<if advanced="$u_Auto=Off">
				<setvar name="Auto" value="On" />
			</if>
			<else>
				<setvar name="Auto" value="Off" />
			</else>
			<setvar name="Status" value="0" />
		</command>
		<command input="/tp">
			<if advanced="$u_TP!=1000">
				<setvar name="TP" value="1000" />
				<echo mode="4">AUTO TP SET TO 1000</echo>
			</if>
			<elseif advanced="$u_TP=1000">
				<setvar name="TP" value="1850" />
