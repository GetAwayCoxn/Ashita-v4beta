			<setvar name="Ring" value="%eq_rring" />
			<equip>
				<ring2>$u_Ring</ring2>
			</equip>
		</if>
		<if advanced="$u_Auto=On">
			<if p_status="engaged">
				<if pet_status="idle">
					<command>//Deploy</command>
				</if>
				<elseif advanced="$u_WS!=0">
					<if p_tp=">$u_TP">
						<command>/ws "$u_WSname"</command>
					</if>
				</elseif>
			</if>
		</if>
	</default>

