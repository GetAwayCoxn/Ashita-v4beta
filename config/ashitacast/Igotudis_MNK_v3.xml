		</set>
	</sets>
	
	
	<!-- VARIABLES -->
	<variables>
		<var name="init">1</var>
		<var name="EvasionSetActive">0</var>
		<var name="MDTSetActive">0</var>
		<var name="PDTSetActive">0</var>
		<var name="TP">1750</var>
		<var name="Reraise">0</var>
		<var name="Auto">0</var>
		<var name="Zerk">0</var>
		<var name="Stance">0</var>
		<var name="Samba">0</var>
		<var name="WS">0</var>
		<var name="WSname">NONE</var>
	</variables>


	<!-- COMMANDS -->
	<inputcommands>
		<cmd input="/init">
			<setvar name="init" value="0" />
		</cmd>
		<cmd input="/reset">
			<setvar name="MDTSetActive" value="0" />
			<setvar name="PDTSetActive" value="0" />
			<setvar name="EvasionSetActive" value="0" />
			<setvar name="Reraise" value="0" />
			<setvar name="Auto" value="0" />
			<setvar name="Stance" value="0" />
			<setvar name="Zerk" value="0" />
			<setvar name="Samba" value="0" />
			<setvar name="WS" value="0" />
			<addtochat color="4">DEFAULT VARIABLES SET</addtochat>
		</cmd>
		<cmd input="/report">
			<addtochat color="4">[WS:] $WSname [TP:] $TP </addtochat>
		</cmd>
		<cmd input="/auto">
			<if advanced="$Auto=0">
				<setvar name="Auto" value="1" />
				<addtochat color="4">Auto Mode Engaged</addtochat>
			</if>
			<elseif advanced="$Auto=1">
				<setvar name="Auto" value="0" />
				<addtochat color="4">Auto Mode Disengaged</addtochat>				
			</elseif>		
		</cmd>
		<cmd input="/tp">
			<if advanced="$TP!=1000">
				<setvar name="TP" value="1000" />
				<addtochat color="4">AUTO TP SET TO 1000</addtochat>
			</if>
			<elseif advanced="$TP=1000">
				<setvar name="TP" value="1750" />
				<addtochat color="4">AUTO TP SET TO 1750</addtochat>				
			</elseif>		
		</cmd>
		<cmd input="/wskill">
			<if advanced="$WS=0">
				<setvar name="WS" value="1" />
				<setvar name="WSname" value="Shijin Spiral" />
				<addtochat color="4">Auto $WSname Enabled!</addtochat>
			</if>
			<elseif advanced="$WS=1">
				<setvar name="WS" value="2" />
				<setvar name="WSname" value="Victory Smite" />
				<addtochat color="4">Auto $WSname Enabled!</addtochat>
			</elseif>
			<elseif advanced="$WS=2">
				<setvar name="WS" value="3" />
				<setvar name="WSname" value="Howling Fist" />
				<addtochat color="4">Auto $WSname Enabled!</addtochat>
			</elseif>
			<elseif advanced="$WS=3">
				<setvar name="WS" value="0" />
				<setvar name="WSname" value="None" />
				<addtochat color="4">Auto WS Disabled!</addtochat>
			</elseif>
		</cmd>
		<cmd input="/samba">
			<if advanced="$Samba=0">
				<setvar name="Samba" value="1" />
				<addtochat color="4">Haste Samba</addtochat>
			</if>
			<elseif advanced="$Samba=1">
				<setvar name="Samba" value="2" />
				<addtochat color="4">Drain Samba</addtochat>				
			</elseif>
			<elseif advanced="$Samba=2">
				<setvar name="Samba" value="0" />
				<addtochat color="4">NO SAMBA</addtochat>				
			</elseif>				
		</cmd>
		<cmd input="/stance">
			<if advanced="$Stance=0">
				<setvar name="Stance" value="1" />
				<addtochat color="4">COUNTERSTANCE IS ON</addtochat>
			</if>
			<elseif advanced="$Stance=1">
				<setvar name="Stance" value="0" />
				<addtochat color="4">COUNTERSTANCE IS OFF</addtochat>				
			</elseif>		
		</cmd>
		<cmd input="/buff">
			<if advanced="$Zerk=0">
				<setvar name="Zerk" value="1" />
				<addtochat color="4">ZERK IS ON</addtochat>
			</if>
			<elseif advanced="$Zerk=1">
				<setvar name="Zerk" value="0" />
				<addtochat color="4">ZERK IS OFF</addtochat>				
			</elseif>		
		</cmd>
		<cmd input="/reraise">
			<if advanced="$Reraise=0">
				<setvar name="Reraise" value="1" />
				<addtochat color="4">Zombie mode, son!</addtochat>
			</if>
			<else>
				<setvar name="Reraise" value="0" />
				<addtochat color="4">Zombie mode OFF, son!</addtochat>
			</else>
		</cmd>
		<cmd input="/eva">
			<setvar name="MDTSetActive" value="0" />
			<setvar name="PDTSetActive" value="0" />
			<if advanced="$EvasionSetActive=0">
				<setvar name="EvasionSetActive" value="1" />
				<addtochat color="4">Evasion set enabled!</addtochat>
			</if>
			<else>
				<setvar name="EvasionSetActive" value="0" />
				<addtochat color="4">Evasion set disabled.</addtochat>
			</else>
		</cmd>
		<cmd input="/mdt">
			<setvar name="EvasionSetActive" value="0" />
			<setvar name="PDTSetActive" value="0" />
			<setvar name="TH" value="0" />
			<if advanced="$MDTSetActive=0">
				<setvar name="MDTSetActive" value="1" />
				<addtochat color="4">MDT set enabled!</addtochat>
			</if>
			<else>
				<setvar name="MDTSetActive" value="0" />
				<addtochat color="4">MDT set disabled.</addtochat>
			</else>
		</cmd>
		<cmd input="/pdt">
			<setvar name="EvasionSetActive" value="0" />
			<setvar name="MDTSetActive" value="0" />
			<setvar name="TH" value="0" />
			<if advanced="$PDTSetActive=0">
				<setvar name="PDTSetActive" value="1" />
				<addtochat color="4">PDT set enabled!</addtochat>
			</if>
			<else>
				<setvar name="PDTSetActive" value="0" />
				<addtochat color="4">PDT set disabled.</addtochat>
			</else>
		</cmd>
		
		<!-- Use /Dsamba to auto choose highest drain samba as /DNC -->
		<cmd input="/Dsamba">
			<if p_joblevel=">=70">
				<command>/ja "Drain Samba II"</command>
			</if>
			<else>
				<command>/ja "Drain Samba"</command>
			</else>
		</cmd>
		<cmd input="/test">
			<addtochat color="4">TESTING SOMETHING OUT RIGHT NOW</addtochat>
		</cmd>

	</inputcommands>
	
	
	
	<init>
        <command>/macro book 4</command>
		<if p_subjob="DNC"><command delay="500">/macro set 10</command></if>
		<if p_subjob="WAR"><command delay="500">/macro set 10</command></if>
   	</init>



	<!-- NO TOUCHY -->
	<idlegear>
		<if advanced="$init=0">
			<setvar name="init" value="1" />
			<command>/exec nin.txt</command>
		</if>  
		<if advanced="$Reraise=1">
			<equip>
			<head>Twilight Helm</head>
			<body>Twilight Mail</body>
			</equip>
		</if>
		<if eq_rring="Trizek Ring">
			<equip lock="true">
				<rring>Trizek Ring</rring>                
			</equip>
		</if>
		<if eq_rring="Capacity Ring">
			<equip lock="true">
				<rring>Capacity Ring</rring>                
			</equip>
		</if>
		<if eq_rring="Endorsement Ring">
			<equip lock="true">
				<rring>Capacity Ring</rring>                
			</equip>
		</if>
		<if eq_rring="Facility Ring">
			<equip lock="true">
				<rring>Facility Ring</rring>                
			</equip>
		</if>
		<if eq_rring="Dim. Ring (Dem)">
			<equip lock="true">
				<rring>Dim. Ring (Dem)</rring>                
			</equip>
		</if>
		<if eq_lring="Dim. Ring (Dem)">
			<equip lock="true">
				<lring>Dim. Ring (Dem)</lring>                
			</equip>
		</if>
		<if eq_back="Mecisto. Mantle">
			<equip lock="true">
				<back>Mecisto. Mantle</back>                
			</equip>
		</if>	
		<if eq_rring="Warp Ring">
			<equip lock="true">
				<rring>Warp Ring</rring>				
			</equip>
		</if>
		<if eq_rring="Empress Band">
			<equip lock="true">
				<rring>Empress Band</rring>				
			</equip>
		</if>
		<if eq_rring="Echad Ring">
			<equip lock="true">
				<rring>Echad Ring</rring>				
			</equip>
		</if>
		
		<!-- RESTING -->	
		<elseif p_status="resting">
			<equip set="Resting" />
		</elseif>
			
		<elseif advanced="$EvasionSetActive=1">
			<equip set="Evasion" />
		</elseif>
			
		<elseif advanced="$MagicEva=1">
				<equip set="MagicEva" />

			<if advanced="$Reraise=1">
				<equip>
					<head>Twilight Helm</head>
					<body>Twilight Mail</body>
				</equip>
			</if>
			<if BuffActive="2">
				<equip>
					<neck>Vim Torque</neck>
				</equip>
			</if>
			<if BuffActive="15">
				<equip>
					<waist>Gishdubar Sash</waist>
					<lring>Saida Ring</lring>
					<rring>Purity Ring</rring>
				</equip> 
			</if>	
		</elseif>	
			
		<elseif advanced="$MDTSetActive=1">
			<equip set="MDT" />
			<if advanced="$Reraise=1">
				<equip>
					<head>Twilight Helm</head>
					<body>Twilight Mail</body>
				</equip>
			</if>
			<if BuffActive="2">
				<equip>
					<neck>Vim Torque</neck>
				</equip>
			</if>
			<if BuffActive="15">
				<equip>
					<waist>Gishdubar Sash</waist>
					<lring>Saida Ring</lring>
					<rring>Purity Ring</rring>
				</equip> 
			</if>	
		</elseif>
		

		<elseif advanced="$PDTSetActive=1">
			<equip set="PDT" />
			<if advanced="$Reraise=1">
				<equip>
					<head>Twilight Helm</head>
					<body>Twilight Mail</body>
				</equip>
			</if>
				<if BuffActive="2">
					<equip>
						<neck>Vim Torque</neck>
					</equip>
				</if>
				<if BuffActive="15">
					<equip>
						<waist>Gishdubar Sash</waist>
						<lring>Saida Ring</lring>
						<rring>Purity Ring</rring>
					</equip> 
				</if>	
		</elseif>

		<!-- ENGAGED -->
		<else>
			<if p_status="engaged">
				<equip set="TP" />	

				<if advanced="$Reraise=1">
					<equip>
						<head>Twilight Helm</head>
						<body>Twilight Mail</body>
					</equip>
				</if>
				<if BuffActive="461"> <!-- Impetus -->
					<equip>
						<body>Bhikku Cyclas +1</body>
					</equip>
				</if>
				<if BuffActive="2">
					<equip>
						<neck>Vim Torque</neck>
					</equip>
				</if>
				<if BuffActive="15">
					<equip>
						<waist>Gishdubar Sash</waist>
						<lring>Saida Ring</lring>
						<rring>Purity Ring</rring>
					</equip> 
				</if>	
			</if>
			<else>
				<equip set="Idle" />
				<if p_ismoving="True">
					<equip set="Movement" />
				</if>
				<if BuffActive="2">
					<equip>
						<neck>Vim Torque</neck>
					</equip>
				</if>
				<if BuffActive="15">
					<equip>
						<waist>Gishdubar Sash</waist>
						<lring>Saida Ring</lring>
						<rring>Purity Ring</rring>
					</equip> 
				</if>	
			</else>
		</else>
		
		
		<!--Trial AUTO MODE -->
		<if advanced="$Auto=1">
			<if p_status="engaged">
				<if advanced="$Zerk=1">
					<if buffactive="!461&!56">
						<command>/ja "Impetus" me</command>
					</if>
					<elseif advanced="(buffactive!=461)&(buffactive=58)">
						<command>/ja "Berserk" me</command>
					</elseif>
					<if advanced="(buffactive=461)&(buffactive!=58)">
						<command>/ja "Aggressor" me</command>
					</if>
				</if>
				<if advanced="$Samba=2">
					<!--Attempting auto Drain Samba -->
					<if buffactive="368">
						<!-- Place holder for now -->
					</if>
					<else>
						<if p_tp=">250">
							<command>/Dsamba</command>
						</if>
					</else>
				</if>
				<elseif advanced="$Samba=1">
					<!--Attempting auto Haste Samba -->
					<if buffactive="370">
						<!-- Place holder for now -->
					</if>
					<else>
						<if p_tp=">450">
							<command>//Hastesamba</command>
						</if>
					</else>
				</elseif>
				
				
				<!-- Auto WS, Aedge at 1000TP, all else at 1750 for now -->
				<if advanced="$WS!=0">
					<if p_tp=">$TP">
						<command>/ws "$WSname"</command>
					</if>
				</if>
				
				
				
				<!-- Auto Counterstance based on cmd /stance -->
				<if advanced="$Stance=0">
					<!-- Place holder for now -->
				</if>
				<elseif advanced="$Stance=1">
					<if buffactive="61">
					</if>
					<else>
						<command>//Counterstance</command>
					</else>
				</elseif>
			</if>
		</if>	
		
	</idlegear>



	<preranged>
	</preranged>

	<premagic>
		<equip set="FastCast" />
	</premagic>


	<midmagic>
		<if ad_name="Monomi*">
			<command>/cancel 71</command>
		</if>
		
		<elseif ad_name="Utsusemi: Ichi">
			<equip set="Haste" />
			<!-- Cancels shadows if... -->
			<if buffactive="66"> <!-- One is shadow left -->
				<command>/cancel 66</command>
			</if>
			<elseif buffactive="444"> <!-- Two shadows are left -->
				<command>/cancel 444</command>
			</elseif>
			<else> <!-- Three are shadows left -->
				<command>/cancel 445</command>
			</else>
		</elseif>
		<elseif ad_name="Utsusemi: Ni">
			<equip set="Haste" />
		</elseif>
		<else>
			<equip set="Haste" />				
		</else>
	</midmagic>



	<jobability> 
		<if ad_name="Boost">
			<equip><hands>Anchor. Gloves +2</hands></equip>
		</if>
		<elseif ad_name="Spectral Jig">
			<if buffactive="71">
				<command>/cancel 71</command>
				<cancel />
				<command delay="2000">/ja "%ad_name" %at_id</command>
			</if>
		</elseif>
	</jobability>




	<weaponskill>
	<if p_tp=">999">
		<if ad_name="Howling Fist">
			<equip set="HowlingFist" />
		</if>
		<elseif ad_name="Asuran Fist">
			<equip set="AsuranFist" />
		</elseif>
		<elseif ad_name="Shijin Spiral">
			<equip set="Shijin" />
		</elseif>
		<elseif ad_name="Victory Smite">
			<equip set="Smite" />
		</elseif>
		<elseif ad_name="Ascetic's Fury">
			<equip set="Fury" />
		</elseif>
		<else>
			<equip set="WS" />
		</else>
		<if e_time=">17.01|<6.59"><equip><lear>Lugra Earring +1</lear></equip></if>
	</if>
	</weaponskill>

		
</ashitacast>