			<neck>Fotia Gorget</neck>
			<hands>Adhemar Wrist. +1</hands>
		</set>
		
		<set name="Smite" baseset="WS">
			<neck>Fotia Gorget</neck>
		</set>
		
		<set name="AsuranFist" baseset="WS">
			<neck>Fotia Gorget</neck>
		</set>
		
		<set name="Fury" baseset="WS">
