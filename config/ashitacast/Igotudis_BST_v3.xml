<ashitacast>
	<settings>
		<buffupdate>true</buffupdate> <!--Determines if your idlegear will be parsed when you gain/lose a buff. Default: TRUE -->
		<statusupdate>true</statusupdate> <!--Determines if your idlegear will be parsed when you change status(stand/rest/engage/etc).  Default: TRUE -->
		<hpupdate>true</hpupdate> <!--Determines if your idlegear will be parsed when your HP % changes.  Default: FALSE -->
		<autoupdate>true</autoupdate> <!--Determines if your idlegear will be parsed on outgoing status updates(roughly every 350ms).  Default: FALSE -->
	</settings>


	<init>
		<command>/macro book 9</command>
		<command delay="500">/macro set 10</command>
	</init>



	<sets>
		<set name="Idle">
			<head>Malignance Chapeau</head> <!--Pet DT10 -->
			<body>Gleti's Cuirass</body>
			<hands>Malignance Gloves</hands>
			<legs>Gleti's Breeches</legs>
			<feet>Gleti's Boots</feet>
			<waist>Flume Belt +1</waist>
			<neck>Loricate Torque +1</neck>
			<lear>Odnowa Earring +1</lear>
			<rear>Handler's Earring +1</rear> <!-- Pet PT4 -->
			<ring1>Defending Ring</ring1>
			<ring2>Gelatinous Ring +1</ring2>
			<back augment="S39036618547310">Artio's Mantle</back> <!-- Pet PT10, Regen 10, Pet acc/attk -->
		</set>
		<set name="Town">
			<head>Straw Hat</head>
			<body>Gleti's Cuirass</body>
			<hands>Malignance Gloves</hands>
			<legs>Gleti's Breeches</legs>
			<feet>Gleti's Boots</feet>
			<waist>Flume Belt +1</waist>
			<lear>Brutal Earring</lear>
			<rear>Cessance Earring</rear>
			<ring1>Epona's Ring</ring1>
			<ring2>Petrov Ring</ring2>
		</set>


		
		<set name="PetTP"> <!-- Set for when only the pet is engaged -->
			<ammo>Voluspa Tathlum</ammo>
			<head>Anwig Salade</head>
			<body>Gleti's Cuirass</body>
			<hands>Malignance Gloves</hands>
			<legs>Taeon Tights</legs>
			<feet>Gleti's Boots</feet>
			<waist>Incarnation Sash</waist>
			<lear>Rimeice Earring</lear>
			<rear>Cessance Earring</rear>
			<ring1>Epona's Ring</ring1>
			<ring2>Petrov Ring</ring2>
		</set>
		<set name="Hybrid" baseset="PetTP"> <!-- Set for when pet and master are both engaged -->
			<head>Adhemar Bonnet +1</head>
			<hands>Adhmar Wrist. +1</hands>
			<waist>Sailfi Belt +1</waist>
			<lear>Brutal Earring</lear>
			<rear>Cessance Earring</rear>
		</set>
		<set name="TP" baseset="Hybrid"> <!-- If master only is engaged for some reason -->
		</set>



		<set name="PetDT" baseset="PetTP">
			<head>Anwig Salade</head> <!--Pet DT10 -->
			<legs>Tali'ah Sera. +2</legs> <!-- Pet DT5 -->
			<rear>Handler's Earring +1</rear> <!-- Pet PT4 -->
			<back augment="S39036618547310">Artio's Mantle</back> <!-- Pet PT10, Regen 10, Pet acc/attk -->
		</set>
		<set name="PetDTregen" baseset="PetDT">
			<head>Taeon Chapeau</head>
			<body>Taeon Tabard</body>
			<hands>Taeon Gloves</hands>
			<legs>Taeon Tights</legs>
		</set>
		
		
		
		<set name="ReadyPhysical" baseset="PetTP">
			<hands>Nukumi Manopolas +1</hands>
			<legs>Gleti's Breeches</legs>
			<feet>Gleti's Boots</feet>
			<waist>Incarnation Sash</waist>
			<back augment="S39036618547310">Artio's Mantle</back> <!-- Pet PT10, Regen 10, Pet acc/attk -->
		</set>
		<set name="ReadyMagic" baseset="ReadyPhysical">
		</set>
		<set name="ReadyMacc" baseset="ReadyPhysical">
		</set>
		
		
		
		<set name="WS">
			<ammo>Voluspa Tathlum</ammo>
			<head>Valorous Mask</head>
			<body>Gleti's Cuirass</body>
			<hands>Valorous Mitts</hands>
			<legs>Gleti's Breeches</legs>
			<feet>Gleti's Boots</feet>
			<neck>Fotia Gorget</neck>
			<waist>Fotia Belt</waist>
			<lear>Brutal Earring</lear>
			<rear>Mache Earring</rear>
			<ring1>Epona's Ring</ring1>
			<ring2>Petrov Ring</ring2>
		</set>
		<set name="Decimation">
			<ammo>Coiste Bodhar</ammo>
			<head>Blistering Sallet +1</head>
			<body>Gleti's Cuirass</body>
			<legs>Gleti's Breeches</legs>
			<feet>Gleti's Boots</feet>
			<neck>Fotia Gorget</neck>
			<waist>Fotia Belt</waist>
			<lear>Brutal Earring</lear>
			<rear>Lugra Earring +1</rear>
			<ring1>Epona's Ring</ring1>
			<ring2>Petrov Ring</ring2>
		</set>
		<set name="Mistral" baseset="WS">
			<head>Valorous Mask</head>
			<hands>Valorous Mitts</hands>
			<lear>Moonshade Earring</lear>
			<rear>Thrud Earring</rear>
		</set>


		<set name="Call">
			<hands>Ankusa Gloves +1</hands>
		</set>
		<set name="Reward">

		</set>
		<set name="Waltz">

		</set>
		<set name="Movement">
		
		</set>
	</sets>



	<variables>
		<var name="Status">0</var>
		<var name="DT">Off</var>
		<var name="Ring">None</var>
		<var name="Magical">Venom|Fireball|Dust Cloud|Acid Spray|Molting Plumage|Cursed Sphere|Purulent Ooze|Stink Bomb|Nectarous Deluge|Charged Whisker|Dark Spore|Silence Gas|Nepenthic Plunge|Corrosive Ooze|Bubble Shower|Venom Shower|Gloom Spray|Foul Waters|Pestilent Plume</var>
		<var name="Macc">Toxic Spit|Acid Spray|Leaf Dagger|Venom Spray|Queasyshroom|Venom Shower|Nectarous Deluge|Venom|Dark Spore|Sandblast|Dust Cloud|Pestilent Plume|Stink Bomb|Chomp Rush|Intimidate|Gloeosuccus|Spider Web|Filamented Hold|Choke Breath|Blaster|Snow Cloud|Roar|Numbshroom|Palsy Pollen|Spore|Brain Crush|Choke Breath|Silence Gas|Chaotic Eye|Sheep Song|Soporific|Tail Blow|Scythe Tail|Predatory Glare|Wing Slap|Sudden Lunge|Suction|Numbing Noise|Tickling Tendrils|Extirpating Salvo|Jettatura|Pentapeck|Bubble Shower|Spoil|Wild Oats|Scream|Noisome Powder|Corrosive Ooze|Acid Mist|Sweeping Gouge|Tortoise Stomp|Rhinowrecker|Swooping Frenzy|Venom Shower|Corrosive Ooze|Spiral Spin|Disembowel|Infrasonics|Hi-Freq Field|Pestilent Plume|Swooping Frenzy|Purulent Ooze|Foul Waters|Nepenthic Plunge|Tegmina Buffet|Foul Waters|Nepenthic Plunge|Sandpit|Shakeshroom|Infected Leech|Pestilent Plume</var>
	</variables>



	<inputcommands>
		<cmd input="/status">
			<setvar name="Status" value="0" />
		</cmd>
	
		<cmd input="/dt"> <!-- used to force PetDT set to stay on -->
			<if advanced="$DT=Off">
				<setvar name="DT" value="On"/>
			</if>
			<else>
				<setvar name="DT" value="Off"/>
			</else>
		</cmd>
	</inputcommands>



	<idlegear>
		<if advanced="$Status=0">
			<setvar name="Status" value="1" />
			<addtochat color="4">%p_mainjob/%p_subjob STATUS:  PET HP [%pet_hpp %]   PET TP [%pet_tp %]   PET DT [$DT]</addtochat> <!-- make more useful info available here -->
		</if>  
		
		<if advanced="$DT=On"> <!-- Force DT set manually with /dt command -->
			<equip set="PetDT" />
		</if>
		<elseif pet_status="idle">
			<if p_status="idle">
				<equip set="Idle" />
				<if advanced="%pet_hpp<95">
					<equip set="PetDTregen" />
				</if>
				<if p_ismoving="True">
					<equip set="Movement" />
				</if>
			</if>
			<else>
				<equip set="TP" />
			</else>
		</elseif>

		<elseif pet_status="engaged">
			<if p_status="engaged">
				<equip set="Hybrid" />
			</if>
			<else>
				<equip set="PetTP" />
			</else>
			<if advanced="%pet_hpp<82">
				<equip set="PetDTregen" />
			</if>
			<elseif advanced="%pet_hpp<50">
				<equip set="PetDT" />
			</elseif>
		</elseif>
		<else>
			<if p_status="engaged">
				<equip set="TP" />
			</if>
		</else>



		<!-- Town gear and Ring locks, I only use my right ring for these -->
		<if e_area="Ru'Lude*|Nashmau|Tavnazian Safehold|Port*|Bastok*|Windurst*|*San d'Oria|*Jeuno|*Whitegate|*Adoulin|Selbina|Mhaura|Norg|Rabao|Mog*">
			<equip set="Town" />
		</if>
		<if eq_rring="Trizek*|Capacity*|Endorsement*|Facility*|Dim. Ring*|Echad*|Warp*">
			<setvar name="Ring" value="%eq_rring" />
			<equip><rring>$Ring</rring></equip>
		</if>
	</idlegear>



	<jobability>
		<if ad_name="Call*|Bestial*">
			<equip set="Call" />
			<setvar name="Status" value="0" />
		</if>
		<elseif ad_name="Curing*">
			<equip set="Waltz" />
		</elseif>
		<elseif ad_name="Reward">
			<equip set="Reward" />
		</elseif>
		<elseif ad_name="Fight|Heel|Stay">
			<setvar name="Status" value="0" />
		</elseif>
	</jobability>



	<petskill>
		<if ad_name="$Magical">
			<equip set="ReadyMagical" />
		</if>
		<elseif ad_name="$Macc">
			<equip set="ReadyMacc" />
		</elseif>
		<else>
			<equip set="ReadyPhysical" /> <!-- Default set for ready moves because I only defined Magical/MACC ready moves because I'm lazy -->
		</else>
	</petskill>



	<weaponskill>
		<if ad_name="Decimation|Ruinator">
			<equip set="Decimation" />
		</if>
		<elseif ad_name="Mistral*|Calamity">
			<equip set="Mistral" />
		</elseif>
		<else>
			<equip set="WS" />
		</else>
	</weaponskill>
</ashitacast>