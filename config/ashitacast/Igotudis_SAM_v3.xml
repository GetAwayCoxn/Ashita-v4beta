	<variables>
		<var name="Status">0</var>
		<var name="DT">Off</var>
		<var name="ACC">Off</var>
		<var name="Ring">None</var>
		<var name="Stance">Off</var>
		<var name="Auto">Off</var>
		<var name="Proc">Off</var>
		<var name="TP">1000</var>
		<var name="SekkiTP">1000</var>
	</variables>
   
   
   
	<inputcommands>
		<cmd input="/status">
			<setvar name="Status" value="0" />
		</cmd>
		<cmd input="/DT">
			<if advanced="$DT=Off">
				<setvar name="DT" value="On" />
			</if>
			<else>
				<setvar name="DT" value="Off"/>
			</else>
			<setvar name="Status" value="0" />
		</cmd>
		<cmd input="/acc">
			<if advanced="$ACC=Off">
				<setvar name="ACC" value="On" />
			</if>
			<else>
				<setvar name="ACC" value="Off" />
			</else>
			<setvar name="Status" value="0" />
		</cmd>
		<cmd input="/stance">
			<if advanced="$Stance=Off">
				<setvar name="Stance" value="Hasso" />
			</if>
			<elseif advanced="$Stance=Hasso">
				<setvar name="Stance" value="Seigan" />				
			</elseif>
			<else>
				<setvar name="Stance" value="Off" />			
			</else>
			<setvar name="Status" value="0" />
		</cmd>
		<cmd input="/proc">
			<if advanced="$Proc=Off">
				<setvar name="Proc" value="On" />
			</if>
			<else>
				<setvar name="Proc" value="Off" />
			</else>
			<setvar name="Status" value="0" />
		</cmd>
		<cmd input="/auto">
			<if advanced="$Auto=Off">
				<setvar name="Auto" value="On" />
			</if>
			<else>
				<setvar name="Auto" value="Off" />
			</else>
			<setvar name="Status" value="0" />
		</cmd>
		<cmd input="/tp">
			<if advanced="$TP!=1000">
				<setvar name="TP" value="1000" />
				<addtochat color="4">AUTO TP SET TO 1000</addtochat>
			</if>
			<elseif advanced="$TP=1000">
				<setvar name="TP" value="1750" />
				<addtochat color="4">AUTO TP SET TO 1750</addtochat>				
			</elseif>		
		</cmd>
		<cmd input="/lightsc">
			<addtochat color="4">FUDO ==> FUDO</addtochat>
			<addtochat color="4">SHOHA ==> KASHA ==> FUDO</addtochat>
			<addtochat color="4">FUDO ==> KASHA ==> SHOHA ==> FUDO</addtochat>
			<addtochat color="4">SHOHA ==> FUDO ==> KASHA ==> SHOHA ==> FUDO</addtochat>
			<addtochat color="4">AGEHA ==> YUKI ==> KASHA ==> SHOHA ==> KASHA ==> FUDO</addtochat>
		</cmd>
		<cmd input="/darksc">
			<addtochat color="4">FUDO ==> RANA  |  RANA ==> FUDO</addtochat>
			<addtochat color="4">SHOHA ==> FUDO ==> RANA</addtochat>
			<addtochat color="4">KASHA ==> RANA ==> FUDO</addtochat>
			<addtochat color="4">RANA ==> SHOHA ==> FUDO ==> RANA</addtochat>
			<addtochat color="4">AGEHA ==> YUKI ==> KASHA ==> FUDO</addtochat>
			<addtochat color="4">SONIC ==> SONIC ==> IMPULSE</addtochat>
			<addtochat color="4">STAR ==> SONIC ==> IMPULSE</addtochat>
		</cmd>
	</inputcommands>
   
   
   
	<idlegear>
		<if advanced="$Status=0">
			<setvar name="Status" value="1" />
			<addtochat color="4">Samurai STATUS:  DT [$DT]   ACC [$ACC]   STANCE [$Stance]   PROC [$Proc]   AUTO [$Auto]</addtochat> <!-- make more useful info available here -->
		</if> 
		
		<if p_status="engaged">
			<if advanced="$DT=On">
				<equip set="DT" />
			</if>
			<elseif advanced="$ACC=On">
				<equip set="acc" />
			</elseif>
			<elseif advanced="$Proc=1">
				<equip set="TPPROC" />
			</elseif>
			<else>
				<equip set="TP" />
				<if buffactive="353"> <!-- hasso -->
					<equip set="Hasso" />
				</if>
			</else>
			<if p_hpp="<51">
				<equip set="DT" />
			</if>
		</if>
		
		<elseif p_status="idle">
			<if advanced="$DT=On">
				<equip set="DT" />
			</if>
			<elseif advanced="$ACC=On">
				<equip set="acc" />
			</elseif>
			<else>
				<equip set="Idle" />
			</else>
			<if p_ismoving="True">
				<equip set="Move" />
			</if>
			<if p_hpp="<46">
				<equip set="DT" />
				<equip><neck>Bathy Choker +1</neck></equip>
			</if>
		</elseif>

      
		<!-- Town gear and Ring locks, I only use my right ring for these, will unequip   -->
		<if e_area="Ru'Lude*|Nashmau|Tavnazian Safehold|Port*|Bastok*|Windurst*|*San d'Oria|*Jeuno|*Whitegate|*Adoulin|Selbina|Mhaura|Norg|Rabao|Mog*">
			<equip set="Town" />
		</if>
		<if eq_rring="Trizek*|Capacity*|Endorsement*|Facility*|Dim. Ring*|Echad*|Warp*">
			<setvar name="Ring" value="%eq_rring" />
			<equip><rring>$Ring</rring></equip>
		</if>
	  
	  
	  
		<!-- ALL THE AUTO STUFF GOES DOWN HERE -->
		<if p_status="Engaged">
			<!-- Auto Stance based on cmd /stance -->
			<if advanced="$Stance=Off">
			</if>
			<elseif advanced="$Stance=Hasso">
				<if buffactive="354">
					<setvar name="Stance" value="Off" />
					<addtochat color="4">OVERIDE STANCE TO OFF</addtochat>
				</if>
				<elseif buffactive="353">
				</elseif>
				<else>
					<command>//Hasso</command>
				</else>
			</elseif>
			<elseif advanced="$Stance=Seigan">
				<if buffactive="353">
					<setvar name="Stance" value="Off" />
					<addtochat color="4">OVERIDE STANCE TO OFF</addtochat>
				</if>
				<elseif buffactive="354">
				</elseif>
				<else>
					<command>//Seigan</command>
				</else>
			</elseif>
			<if advanced="$Auto=On">
				<if advanced="$Proc=On">
					<if p_tp=">999">
						<command>/ws "tachi: Jinpu"</command>
					</if>
				</if>
				<else>
					<if buffactive="272">
						<if buffactive="408">
							<setvar name="SekkiTP" value="1750" />
						</if>
						<else>
							<setvar name="SekkiTP" value="$TP" />
						</else>
					</if>
					<else>
						<setvar name="SekkiTP" value="2999" />
					</else>
					
					<if p_tp=">$SekkiTP">
						<command>/ws "tachi: Fudo"</command>
					</if>
				</else>
			</if>
		</if>
	</idlegear>
	
	
	
	<premagic>
		<equip set="Precast" />
	</premagic>
	<midmagic>
	</midmagic>
	
	
	
	<jobability>
		<if ad_name="Hasso">
			<equip set="Hasso" />
		</if>
		<elseif ad_name="Meditate|Warding*">
			<equip set="Meditate" />
		</elseif>
		<if ad_name="Meikyo Shisui">
			<equip><feet>Sak. Sune-Ate +3</feet></equip>
		</if>
	</jobability>
	
	
	
	<weaponskill>
		<if t_distance="<5">
			<if advanced="$Proc=1">
				<equip set="WSPROC" />
			</if>
			<elseif p_tp=">999">
				<if ad_name="Tachi: Ageha">
					<equip set="ageha" />
				</if>
				<elseif ad_name="Impulse*|Sonic*">
					<equip set="impulse" />
				</elseif>
				<elseif ad_name="Stardiver">
					<equip set="stardiver" />
				</elseif>
				<elseif ad_name="Tachi: Jinpu">
					<equip set="jinpu" />
				</elseif>
				<elseif ad_name="Tachi: Shoha|Tachi: Rana">
					<equip set="shoha" />
				</elseif>
				<else>
					<equip set="WS" />
				</else>
				<if p_tp="3000"><equip><rear>Lugra Earring +1</rear><head>Valorous Mask</head></equip></if>
			</elseif>
		</if>
		<else>
			<addtochat color="4">TARGET TOO FAR</addtochat>
			<cancel />
		</else>
	</weaponskill>
</ashitacast>
