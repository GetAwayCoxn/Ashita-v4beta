	<commands>
		<command input="/status">
			<setvar name="Status" value="0" />
		</command>
		<command input="/DT">
			<if advanced="$u_DT=Off">
				<setvar name="DT" value="On" />
			</if>
			<else>
				<setvar name="DT" value="Off" />
			</else>
			<setvar name="Status" value="0" />
		</command>
		<command input="/acc">
			<if advanced="$u_ACC=Off">
				<setvar name="ACC" value="On" />
			</if>
			<else>
				<setvar name="ACC" value="Off" />
			</else>
			<setvar name="Status" value="0" />
		</command>
		<command input="/stance">
			<if advanced="$u_Stance=Off">
				<setvar name="Stance" value="Hasso" />
			</if>
			<elseif advanced="$u_Stance=Hasso">
				<setvar name="Stance" value="Seigan" />
			</elseif>
			<else>
				<setvar name="Stance" value="Off" />
			</else>
			<setvar name="Status" value="0" />
		</command>
		<command input="/proc">
			<if advanced="$u_Proc=Off">
				<setvar name="Proc" value="On" />
			</if>
			<else>
				<setvar name="Proc" value="Off" />
			</else>
			<setvar name="Status" value="0" />
		</command>
		<command input="/auto">
			<if advanced="$u_Auto=Off">
				<setvar name="Auto" value="On" />
			</if>
			<else>
				<setvar name="Auto" value="Off" />
			</else>
			<setvar name="Status" value="0" />
		</command>
		<command input="/tp">
			<if advanced="$u_TP!=1000">
				<setvar name="TP" value="1000" />
				<echo mode="4">AUTO TP SET TO 1000</echo>
			</if>
			<elseif advanced="$u_TP=1000">
				<setvar name="TP" value="1750" />
				<echo mode="4">AUTO TP SET TO 1750</echo>
			</elseif>
		</command>
		<command input="/lightsc">
			<echo mode="4">FUDO ==> FUDO</echo>
			<echo mode="4">SHOHA ==> KASHA ==> FUDO</echo>
			<echo mode="4">FUDO ==> KASHA ==> SHOHA ==> FUDO</echo>
			<echo mode="4">SHOHA ==> FUDO ==> KASHA ==> SHOHA ==> FUDO</echo>
			<echo mode="4">AGEHA ==> YUKI ==> KASHA ==> SHOHA ==> KASHA ==> FUDO</echo>
		</command>
		<command input="/darksc">
			<echo mode="4">FUDO ==> RANA  |  RANA ==> FUDO</echo>
			<echo mode="4">SHOHA ==> FUDO ==> RANA</echo>
			<echo mode="4">KASHA ==> RANA ==> FUDO</echo>
			<echo mode="4">RANA ==> SHOHA ==> FUDO ==> RANA</echo>
			<echo mode="4">AGEHA ==> YUKI ==> KASHA ==> FUDO</echo>
			<echo mode="4">SONIC ==> SONIC ==> IMPULSE</echo>
			<echo mode="4">STAR ==> SONIC ==> IMPULSE</echo>
		</command>
	</commands>

	<load>
		<setvar name="Status" value="0" />
		<setvar name="DT" value="Off" />
		<setvar name="ACC" value="Off" />
		<setvar name="Ring" value="None" />
		<setvar name="Stance" value="Off" />
		<setvar name="Auto" value="Off" />
		<setvar name="Proc" value="Off" />
		<setvar name="TP" value="1000" />
		<setvar name="SekkiTP" value="1000" />
		<command>/macro book 4</command>
		<if p_subjob="DRG">
			<command delay="500">/macro set 9</command>
		</if>
		<elseif p_subjob="WAR">
			<command delay="500">/macro set 8</command>
		</elseif>
		<else>
			<command delay="500">/macro set 8</command>
		</else>
	</load>

	<default>
		<if advanced="$u_Status=0">
			<setvar name="Status" value="1" />
			<echo mode="4">Samurai STATUS:  DT [$u_DT]   ACC [$u_ACC]   STANCE [$u_Stance]   PROC [$u_Proc]   AUTO [$u_Auto]</echo>
		</if>
		<if p_status="engaged">
			<if advanced="$u_DT=On">
				<equip set="DT" />
			</if>
			<elseif advanced="$u_ACC=On">
				<equip set="acc" />
			</elseif>
			<elseif advanced="$u_Proc=1">
				<equip set="TPPROC" />
			</elseif>
			<else>
				<equip set="TP" />
				<if b_353=">=1">
					<equip set="Hasso" />
				</if>
			</else>
			<if p_hpp="<51">
				<equip set="DT" />
			</if>
		</if>
		<elseif p_status="idle">
			<if advanced="$u_DT=On">
				<equip set="DT" />
			</if>
			<elseif advanced="$u_ACC=On">
				<equip set="acc" />
			</elseif>
			<else>
				<equip set="Idle" />
			</else>
			<if p_ismoving="True">
				<equip set="Move" />
			</if>
			<if p_hpp="<46">
				<equip set="DT" />
				<equip>
					<neck>Bathy Choker +1</neck>
				</equip>
			</if>
		</elseif>
		<if e_area="Ru'Lude*|Nashmau|Tavnazian Safehold|Port*|Bastok*|Windurst*|*San d'Oria|*Jeuno|*Whitegate|*Adoulin|Selbina|Mhaura|Norg|Rabao|Mog*">
			<equip set="Town" />
		</if>
		<if eq_rring="Trizek*|Capacity*|Endorsement*|Facility*|Dim. Ring*|Echad*|Warp*">
			<setvar name="Ring" value="%eq_rring" />
			<equip>
				<ring2>$u_Ring</ring2>
			</equip>
		</if>
		<if p_status="Engaged">
			<if advanced="$u_Stance=Off">
			</if>
			<elseif advanced="$u_Stance=Hasso">
				<if b_354=">=1">
					<setvar name="Stance" value="Off" />
					<echo mode="4">OVERIDE STANCE TO OFF</echo>
				</if>
				<elseif b_353=">=1">
				</elseif>
				<else>
					<command>//Hasso</command>
				</else>
			</elseif>
			<elseif advanced="$u_Stance=Seigan">
				<if b_353=">=1">
					<setvar name="Stance" value="Off" />
					<echo mode="4">OVERIDE STANCE TO OFF</echo>
				</if>
				<elseif b_354=">=1">
				</elseif>
				<else>
					<command>//Seigan</command>
				</else>
			</elseif>
			<if advanced="$u_Auto=On">
				<if advanced="$u_Proc=On">
					<if p_tp=">999">
						<command>/ws "tachi: Jinpu"</command>
					</if>
				</if>
				<else>
					<if b_272=">=1">
						<if b_408=">=1">
							<setvar name="SekkiTP" value="1750" />
						</if>
						<else>
							<setvar name="SekkiTP" value="$TP" />
						</else>
					</if>
					<else>
						<setvar name="SekkiTP" value="2999" />
					</else>
					<if p_tp=">$u_SekkiTP">
						<command>/ws "tachi: Fudo"</command>
					</if>
				</else>
			</if>
		</if>
	</default>

	<precast>
		<equip set="Precast" />
	</precast>

	<midcast>
	</midcast>

	<ability>
		<if ad_name="Hasso">
			<equip set="Hasso" />
		</if>
		<elseif ad_name="Meditate|Warding*">
			<equip set="Meditate" />
		</elseif>
		<if ad_name="Meikyo Shisui">
			<equip>
				<feet>Sak. Sune-Ate +3</feet>
			</equip>
		</if>
	</ability>

	<weaponskill>
		<if t_distance="<5">
			<if advanced="$u_Proc=1">
				<equip set="WSPROC" />
			</if>
			<elseif p_tp=">999">
				<if ad_name="Tachi: Ageha">
					<equip set="ageha" />
				</if>
				<elseif ad_name="Impulse*|Sonic*">
					<equip set="impulse" />
				</elseif>
				<elseif ad_name="Stardiver">
					<equip set="stardiver" />
				</elseif>
				<elseif ad_name="Tachi: Jinpu">
					<equip set="jinpu" />
				</elseif>
				<elseif ad_name="Tachi: Shoha|Tachi: Rana">
					<equip set="shoha" />
				</elseif>
				<else>
					<equip set="WS" />
				</else>
				<if p_tp="3000">
					<equip>
						<ear2>Lugra Earring +1</ear2>
						<head>Valorous Mask</head>
					</equip>
				</if>
			</elseif>
		</if>
		<else>
			<echo mode="4">TARGET TOO FAR</echo>
			<cancel />
		</else>
	</weaponskill>

</ashitacast>