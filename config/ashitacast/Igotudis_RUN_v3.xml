					<equip when="midcast">
						<waist>Hachirin-no-Obi</waist>
					</equip>
				</if>
			</elseif>
		</elseif>
		<elseif ad_skill="darkmagic">
			<equip set="DarkMagic" />
		</elseif>
	</midmagic>



