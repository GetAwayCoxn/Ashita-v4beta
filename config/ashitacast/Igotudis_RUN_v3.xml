	<variables>
		<var name="Status">0</var>
		<var name="Hybrid">Off</var>
		<var name="DT">Off</var>
		<var name="Auto">Off</var>
		<var name="Death">0</var>
		<var name="Charm">0</var>
		<var name="Defender">Off</var>
		<var name="SIR">0</var>	
		<var name="Ring">None</var>
	</variables>

	<inputcommands>
		<cmd input="/status">
			<setvar name="Status" value="0" />
		</cmd>
		<cmd input="/charm">
			<if advanced="$Charm=0">
				<setvar name="Charm" value="1" />
			</if>
			<else>
				<setvar name="Charm" value="0" />
			</else>
			<setvar name="Status" value="0" />
		</cmd>
		<cmd input="/def">
			<if advanced="$Defender=Off">
				<setvar name="Defender" value="On" />
			</if>
			<else>
				<setvar name="Defender" value="Off" />
			</else>
			<setvar name="Status" value="0" />
		</cmd>
		<cmd input="/death">
			<if advanced="$Death=0">
				<setvar name="Death" value="1" />
			</if>
			<else>
				<setvar name="Death" value="0" />
			</else>
			<setvar name="Status" value="0" />
		</cmd>
		<cmd input="/hybrid">
			<if advanced="$Hybrid=Off">
				<setvar name="Hybrid" value="On" />
			</if>
			<else>
				<setvar name="Hybrid" value="Off" />
			</else>
			<setvar name="Status" value="0" />
		</cmd>
		<cmd input="/dt">
			<if advanced="$DT=Off">
				<setvar name="DT" value="On" />
			</if>
			<else>
				<setvar name="DT" value="Off" />
			</else>
			<setvar name="Status" value="0" />
		</cmd>
	</inputcommands>
	
	
	
	<idlegear>
		<if advanced="$Status=0">
			<setvar name="Status" value="1" />
			<addtochat color="4">STATUS:  HYBRID [$Hybrid]  DT [$DT]  AUTO [$Auto]  DEF [$Defender]</addtochat>
		</if>



		<if advanced="$DT=On">
			<equip set="DT" />
			<if advanced="$Charm=1">
				<equip set="Charm" />
			</if>
			<if advanced="$Death=1">
				<equip set="Death" />
			</if>
		</if>
		<else>
			<if p_status="engaged">
				<equip set="TP" />
				<if advanced="$Hybrid=On">
					<equip set="Hybrid" />
				</if>
			</if>
			<else>
				<equip set="Idle" />
				<if p_ismoving="True">
					<equip set="Movement" />
				</if>
			</else>
		</else>
		
		
		
		<if BuffActive="15"> <!-- Doom -->
			<equip>
				<waist>Gishdubar Sash</waist>
				<lring>Saida Ring</lring>
				<rring>Purity Ring</rring>
			</equip> 
		</if>



		<!-- Town gear and Ring locks, I only use my right ring for these, will unequip   -->
		<if e_area="Ru'Lude*|Nashmau|Tavnazian Safehold|Port*|Bastok*|Windurst*|*San d'Oria|*Jeuno|*Whitegate|*Adoulin|Selbina|Mhaura|Norg|Rabao|Mog*">
			<equip set="Town" />
		</if>
		<if eq_rring="Trizek*|Capacity*|Endorsement*|Facility*|Dim. Ring*|Echad*|Warp*">
			<setvar name="Ring" value="%eq_rring" />
			<equip><rring>$Ring</rring></equip>
		</if>



		<!-- AUTO MODE STUFF IS HERE -->
		<if advanced="$Auto=On">
			<if p_status="engaged">
				<if p_tp=">1000">
					<command>/ws "Dimidation"</command>
				</if>
			</if>
		</if>
		<if advanced="($Defender=On)&(p_status=engaged)">
			<if advanced="(p_subjob=WAR)&(BuffActive!=57)">
				<command>/ja "Defender" me</command>
			</if>
		</if>
	</idlegear>



	<premagic>
		<equip set="Precast" />
		
		<if ad_type="whitemagic">      
			<if ad_skill="healingmagic">
				<if ad_name="Cure*|Cura*">
					<equip set="CurePre"/>
				</if>
			</if>
			<elseif ad_skill="enhancingmagic">
				<equip set="EnhPre" />
			</elseif>   
		</if>
		<elseif ad_type="blackmagic">
			<if ad_skill="enhancingmagic">
