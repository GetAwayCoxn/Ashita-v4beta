		<elseif ad_skill="elementalmagic">
			<equip set="MAB" />
			<elseif advanced="%ad_element=%e_dayelement">
				<if ad_element="Light|Fire|Dark|Water|Thunder|Earth|Wind|Ice">
					<equip>
						<waist>Hachirin-no-Obi</waist>
					</equip>
				</if>
			</elseif>
			<elseif advanced="%ad_element=%e_weatherelement">
