	<inputcommands>
		<cmd input="/reset">
			<setvar name="MDTSetActive" value="0" />
			<setvar name="PDTSetActive" value="0" />
			<setvar name="EvasionSetActive" value="0" />
			<addtochat color="4">DEFAULTS SET</addtochat>
		</cmd>
		<cmd input="/cp">
			<if advanced="$CP=0">
				<setvar name="CP" value="1" />
				<addtochat color="4">[CP Cape:] On</addtochat>
			</if>
			<else>
				<setvar name="CP" value="0" />
				<addtochat color="4">[CP Cape:] Off</addtochat>
			</else>
		</cmd>			
		<cmd input="/report">
			<addtochat color="4">[TP:] $Set</addtochat>
		</cmd>			
		
		
		
		<cmd input="/acc">
			<if advanced="$Set=Old">
				<setvar name="Set" value="Acc" />
				<addtochat color="4">Accuracy mode, son!</addtochat>
			</if>
			<elseif advanced="$Set=Acc">
				<setvar name="Set" value="Hybrid" />
				<addtochat color="4">Hybrid mode, son!</addtochat>				
			</elseif> 
			<else>
				<setvar name="Set" value="Old" />
				<addtochat color="4">Kicking it oldschool, son!</addtochat>
			</else>
		</cmd>
		<cmd input="/eva">
			<setvar name="MDTSetActive" value="0" />
			<setvar name="PDTSetActive" value="0" />
			<if advanced="$EvasionSetActive=0">
				<setvar name="EvasionSetActive" value="1" />
				<addtochat color="4">Evasion set enabled!</addtochat>
			</if>
			<else>
				<setvar name="EvasionSetActive" value="0" />
				<addtochat color="4">Evasion set disabled.</addtochat>
			</else>
		</cmd>
		<cmd input="/mdt">
			<setvar name="EvasionSetActive" value="0" />
			<setvar name="PDTSetActive" value="0" />
			<if advanced="$MDTSetActive=0">
				<setvar name="MDTSetActive" value="1" />
				<addtochat color="4">MDT set enabled!</addtochat>
			</if>
			<else>
				<setvar name="MDTSetActive" value="0" />
				<addtochat color="4">MDT set disabled.</addtochat>
			</else>
		</cmd>
		<cmd input="/pdt">
			<setvar name="EvasionSetActive" value="0" />
			<setvar name="MDTSetActive" value="0" />
			<if advanced="$PDTSetActive=0">
				<setvar name="PDTSetActive" value="1" />
				<addtochat color="4">PDT set enabled!</addtochat>
			</if>
			<else>
				<setvar name="PDTSetActive" value="0" />
				<addtochat color="4">PDT set disabled.</addtochat>
			</else>
		</cmd>
		<cmd input="/Dsamba">
			<if p_joblevel=">64">
				<command>/ja "Drain Samba III"</command>
			</if>
			<elseif p_joblevel=">34">
				<command>/ja "Drain Samba II"</command>
			</elseif>
			<else>
				<command>/ja "Drain Samba"</command>
			</else>
		</cmd>
		<cmd input="/Step">
			<if advanced="$Step=0">
				<command>/ja "quickstep"</command>
				<setvar name="Step" value="1" />
			</if>
			<else>
				<command>/ja "boxstep"</command>
				<setvar name="Step" value="0" />
			</else>
		</cmd>
		<cmd input="/Cwaltz">
		</cmd>
	</inputcommands>
	
	
	
