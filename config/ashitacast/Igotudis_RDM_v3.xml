	<variables>
		<var name="Status">0</var>
		<var name="DT">Off</var>
		<var name="Ring">None</var>
		<var name="Melee">Off</var>
		<var name="Burst">Off</var>
		<var name="TPWeapons">Naegling|Sakpata's Sword|Tauret</var>
		<var name="Auto">Off</var>
		<var name="WS">0</var>
		<var name="WSname">None</var>
		<var name="TP">1000</var>
		<var name="Cape">false</var>
	</variables>



	<inputcommands>
		<cmd input="/status">
			<setvar name="Status" value="0" />
		</cmd>
		<cmd input="/cape">
			<if advanced="$Cape=false">
				<setvar name="Cape" value="true" />
				<command>/exec capeon.txt</command>
				<addtochat color="4">CP CAPE ON</addtochat>
			</if>
			<else>
				<setvar name="Cape" value="false" />
				<command>/exec capeoff.txt</command>
				<addtochat color="4">CP CAPE OFF</addtochat>				
			</else>		
		</cmd>
		<cmd input="/dt">
			<if advanced="$DT=Off">
                <setvar name="DT" value="On"/>
            </if>
			<else>
				<setvar name="DT" value="Off"/>
			</else>
			<setvar name="Status" value="0" />
		</cmd>
		<cmd input="/burst">
			<if advanced="$Burst=Off">
                <setvar name="Burst" value="On"/>
            </if>
			<else>
				<setvar name="Burst" value="Off"/>
			</else>
			<setvar name="Status" value="0" />
		</cmd>
		<cmd input="/fight">
			<if advanced="$Melee=Off">
				<setvar name="Melee" value="On" />
				<command>/ac disable main</command>
				<command>/ac disable sub</command>
				<command>/ac disable range</command>
				<equip set="TP" />
			</if>
			<else>
				<setvar name="Melee" value="Off" />
				<command>/ac enable</command>
			</else>
			<setvar name="Status" value="0" />
		</cmd>
		<cmd input="/auto"> <!-- activates certain automatic functions -->
			<if advanced="$Auto=Off">
                <setvar name="Auto" value="On"/>
            </if>
			<else>
				<setvar name="Auto" value="Off"/>
			</else>
			<setvar name="Status" value="0" />
		</cmd>
		<cmd input="/tp">
			<if advanced="$TP!=1000">
				<setvar name="TP" value="1000" />
				<addtochat color="4">AUTO TP SET TO 1000</addtochat>
			</if>
			<elseif advanced="$TP=1000">
				<setvar name="TP" value="1750" />
				<addtochat color="4">AUTO TP SET TO 1750</addtochat>				
			</elseif>		
		</cmd>
		<cmd input="/wskill">
			<if advanced="$WS=0">
				<setvar name="WS" value="1" />
				<setvar name="WSname" value="Savage Blade" />
				<addtochat color="4">Auto $WSname Enabled!</addtochat>
			</if>
			<elseif advanced="$WS=1">
				<setvar name="WS" value="2" />
				<setvar name="WSname" value="Chant du Cygne" />
				<addtochat color="4">Auto $WSname Enabled!</addtochat>
			</elseif>
			<elseif advanced="$WS=2">
				<setvar name="WS" value="0" />
				<setvar name="WSname" value="None" />
				<addtochat color="4">Auto WS Disabled!</addtochat>
			</elseif>
		</cmd>
	</inputcommands>



	<idlegear>
		<if advanced="$Status=0">
			<setvar name="Status" value="1" />
			<addtochat color="4">%p_mainjob/%p_subjob STATUS:  DT [$DT]   MELEE [$Melee]   BURST [$Burst]   AUTO [$Auto]   WS[$WSname]</addtochat>
		</if> 
		
		
		
		<if mode="AND" eq_main="$TPWeapons" p_status="engaged">
			<if advanced="$Melee=Off">
				<command>/fight</command>
			</if>
		</if>
		
		
		
		<if advanced="$DT=On"> <!-- Force DT set if manually engaged with /dt command -->
			<equip set="DT" />
		</if>
		<elseif p_status="engaged">
			<equip set="TP" />
		</elseif>
		<else>
			<equip set="Idle" />
		</else>



		<!-- Town gear and Ring locks, I only use my right ring for these, will unequip   -->
		<if e_area="Ru'Lude*|Nashmau|Tavnazian Safehold|Port*|Bastok*|Windurst*|*San d'Oria|*Jeuno|*Whitegate|*Adoulin|Selbina|Mhaura|Norg|Rabao|Mog*">
			<equip set="Town" />
			<setvar name="Auto" value="Off" />
			<if advanced="$Melee=On">
				<setvar name="Melee" value="Off" />
				<command>/ac enable</command>
			</if>
		</if>
		<if eq_rring="Trizek*|Capacity*|Endorsement*|Facility*|Dim. Ring*|Echad*|Warp*">
			<setvar name="Ring" value="%eq_rring" />
			<equip><rring>$Ring</rring></equip>
		</if>
		
		
		
		<!-- AUTO MODE STUFF IS HERE -->
		<if advanced="$Auto=On">
			<if p_status="engaged">
				<if advanced="$WS!=0">
					<if p_tp=">$TP">
						<command>/ws "$WSname"</command>
					</if>
				</if>
			</if>
			<if Buffactive="!419"> <!-- Auto Composure -->
				<command>/ja "composure" me</command>
			</if>
		</if>
	</idlegear>
	
	
	
	<premagic>
		<equip set="Precast" />
		
		<if ad_name="Cure*|Curaga*">
			<equip set="CurePre" />
		</if>
		<elseif ad_skill="enhancingmagic">
			<equip set="EnhPre" />
			<if ad_name="Stoneskin">
				<equip set="SSPre" />
			</if>
		</elseif>
		<elseif ad_name="Utsu*">
			<equip set="UtsuPre" />
		</elseif>
	</premagic>
	
	
	
	<midmagic>
		<if ad_type="WhiteMagic">
			<if ad_name="Cure*|Curaga*">
				<equip set="Cure" />
				<if mode="OR" e_weatherelement="Light" e_dayelement="Light">
					<equip><waist>Hachirin-no-Obi</waist></equip>
				</if>
				<if t_type="self">
					<equip set="selfCure" />
				</if>
			</if>
			<elseif ad_skill="enhancingmagic">
				<if t_type="self">
					<equip set="selfEnhancing" />
					<if ad_name="Phalanx*">
						<equip set="Phalanx" />
					</if>
				</if>
				<else>
					<equip set="Enhancing" />
				</else>
				<if ad_name="Stoneskin">
					<equip set="SS" />
				</if>
				<if ad_name="En*|Temper*">
					<equip set="SKILL" />
				</if>
			</elseif>
			<elseif ad_skill="enfeeblingmagic">
				<equip set="Enfeebling" />
			</elseif>
			<if ad_name="Cursna*">
				<equip set="Cursna" />
			</if>
			<if ad_name="Refresh*">
				<if t_type="self">
					<equip set="selfRefresh" />
				</if>
				<else>
					<equip set="Refresh" />
				</else>
			</if>
		</if>
		<elseif ad_type="BlackMagic">
			<equip set="Enfeebling" /> <!-- default to macc set if nothing else defined -->
			<if ad_skill="elementalmagic">
				<equip set="Nuke" />
				<if advanced="%ad_element=%e_dayelement">
					<equip><waist>Hachirin-no-Obi</waist></equip>
                </if>
                <elseif advanced="%ad_element=%e_weatherelement">
					<equip><waist>Hachirin-no-Obi</waist></equip>
                </elseif>
				<if advanced="$Burst=On">
					<equip set="Burst" />
				</if>
				<if ad_name="*helix">
					<equip set="Helix" />
				</if>
			</if>
			<elseif ad_skill="enfeeblingmagic">
				<if ad_name="Paralyze*|Slow*|Addle*">
					<equip set="MND" />
				</if>
				<elseif ad_name="Poison*">
					<equip set="INT" />
				</elseif>
				<elseif ad_name="Distract*|Frazzle III"> <!-- Frazzle II in macc gear to be able to stick III in potency gear -->
					<equip set="POT" />
				</elseif>
			</elseif>
			<if ad_name="Aspir*|Drain*">
				<equip set="Drain" />
			</if>
		</elseif>
	</midmagic>



